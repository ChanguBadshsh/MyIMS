<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/_8sdp">

    <com.smart.customviews.SmartTextView
        android:id="@+id/txtRepeatDropDownBox"
        style="@style/textview_h3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_color_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="vertical">

        <com.smart.customviews.SmartSpinner
            android:id="@+id/spnRepeatDropDownBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dropdown_large"
            android:gravity="center_vertical"
            android:spinnerMode="dialog"/>

        <com.smart.customviews.SmartEditText
            android:id="@+id/edtRepeatValue"
            style="@style/edittext_h3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>