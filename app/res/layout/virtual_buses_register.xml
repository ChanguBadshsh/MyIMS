<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 xmlns:facebook="http://schemas.android.com/tools"
                                                 android:background="@drawable/login_back_three"
                                                 android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <com.smart.customviews.RoundedImageView
            android:id="@+id/picture"
            android:layout_gravity="center"
            android:src="@color/primaryColorDark"
            app:border_color="@android:color/white"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.smart.customviews.SmartEditText
                android:id="@+id/etEmail"
                android:padding="15dp"
                android:hint="Email"
                android:textSize="20dp"
                android:textColorHint="#ffffff"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.smart.customviews.SmartEditText
                android:id="@+id/etPassword"
                android:padding="15dp"
                android:hint="Passsword "
                android:textSize="20dp"
                android:textColorHint="#ffffff"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.smart.customviews.SmartEditText
                android:id="@+id/etFirstName"
                android:padding="15dp"
                android:hint="First Name"
                android:textSize="20dp"
                android:textColorHint="#ffffff"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.smart.customviews.SmartEditText
                android:id="@+id/etLastName"
                android:padding="15dp"
                android:hint="Last Name "
                android:textSize="20dp"
                android:textColorHint="#ffffff"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.smart.customviews.SmartEditText
                android:id="@+id/etMobile"
                android:padding="15dp"
                android:hint="Mobile Number "
                android:textSize="20dp"
                android:textColorHint="#ffffff"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.smart.customviews.SmartButton
                android:id="@+id/btnCancel"
                android:background="@drawable/login_edit_text_back_one"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="10dp"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.smart.customviews.SmartButton
                android:id="@+id/btnRegister"
                android:background="@drawable/login_edit_text_back_one"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="10dp"
                android:text="REgister"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>