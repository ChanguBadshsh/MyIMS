<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="@dimen/_2sdp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="60"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.smart.customviews.SmartTextView
                    android:text="Kalupoor"
                    android:id="@+id/startStation"
                    android:textSize="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.smart.customviews.SmartTextView
                    android:text=" - "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.smart.customviews.SmartTextView
                    android:text="Maninagar"
                    android:id="@+id/endStation"
                    android:textSize="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.smart.customviews.SmartTextView
                    android:drawableLeft="@drawable/clock"
                    android:textColor="@color/gray_color"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Estimate Arrival: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.smart.customviews.SmartTextView
                    android:text="10:20 AM"
                    android:id="@+id/arrivalTime"
                    android:textColor="@color/gray_color"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_weight="40"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Bus No: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/busNumber"
                    android:text="1235"
                    android:textSize="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Remind "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:id="@+id/switchRemind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>