<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/toolbarTheme" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp">
            <FrameLayout
                android:background="@drawable/login_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:background="#50000000"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_0sdp">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:background="#70000000"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_0sdp">
                    </LinearLayout>
                </LinearLayout>
                <com.smart.customviews.RoundedImageView
                    android:layout_gravity="center"
                    app:is_oval="true"
                    app:corner_radius="@dimen/_360sdp"
                    android:id="@+id/imgProfile"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"/>
            </FrameLayout>


        </android.support.v7.widget.CardView>

        <android.support.v4.widget.NestedScrollView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        app:cardUseCompatPadding="true"
                        app:cardElevation="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/profile"
                                android:tint="@color/primaryColor"
                                android:layout_weight="20"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_20sdp"
                                />
                            <View
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/primaryColor"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_height="match_parent"/>
                            <com.smart.customviews.SmartEditText
                                android:gravity=""
                                android:id="@+id/tvUserName"
                                android:padding="@dimen/_10sdp"
                                android:text="Pratik Vyas"
                                android:textSize="@dimen/_15sdp"
                                android:textColor="@color/com_facebook_likeboxcountview_text_color"
                                android:layout_width="0dp"
                                android:layout_weight="60"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        app:cardUseCompatPadding="true"
                        app:cardElevation="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/email"
                                android:tint="@color/primaryColor"
                                android:layout_weight="20"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_20sdp"/>
                            <View
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/primaryColor"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_height="match_parent"/>
                            <com.smart.customviews.SmartEditText
                                android:id="@+id/tvUserEmail"
                                android:padding="@dimen/_10sdp"
                                android:text="pratik@gmail.com"
                                android:textSize="@dimen/_15sdp"
                                android:textColor="@color/com_facebook_likeboxcountview_text_color"
                                android:layout_width="0dp"
                                android:layout_weight="60"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        app:cardUseCompatPadding="true"
                        app:cardElevation="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/mobile"
                                android:tint="@color/primaryColor"
                                android:layout_weight="20"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_20sdp"/>
                            <View
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/primaryColor"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_height="match_parent"/>
                            <com.smart.customviews.SmartEditText
                                android:id="@+id/tvUserMobile"
                                android:padding="@dimen/_10sdp"
                                android:text="1234567890"
                                android:textSize="@dimen/_15sdp"
                                android:textColor="@color/com_facebook_likeboxcountview_text_color"
                                android:layout_width="0dp"
                                android:layout_weight="60"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        app:cardUseCompatPadding="true"
                        app:cardElevation="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/birthday"
                                android:tint="@color/primaryColor"
                                android:layout_weight="20"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_20sdp"/>
                            <View
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/primaryColor"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_height="match_parent"/>
                            <com.smart.customviews.SmartEditText
                                android:id="@+id/tvUserBirthDate"
                                android:padding="@dimen/_10sdp"
                                android:text="13 March 1991"
                                android:textSize="@dimen/_15sdp"
                                android:textColor="@color/com_facebook_likeboxcountview_text_color"
                                android:layout_width="0dp"
                                android:layout_weight="60"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        app:cardUseCompatPadding="true"
                        app:cardElevation="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/male_female"
                                android:tint="@color/primaryColor"
                                android:layout_weight="20"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_20sdp"/>
                            <View
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/primaryColor"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_height="match_parent"/>


                                <Spinner
                                    android:orientation="horizontal"
                                    android:id="@+id/spnGender"
                                    android:padding="@dimen/_10sdp"
                                    android:text="Gender"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/com_facebook_likeboxcountview_text_color"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>