<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/toolbarTheme" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/profile_cover_temp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp">
            <FrameLayout
                android:background="#20000000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp">
                <com.smart.customviews.RoundedImageView
                    android:id="@+id/imgProfile"
                    android:layout_gravity="center"
                    app:border_color="@color/accent"
                    android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                    app:is_oval="false"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"/>
            </FrameLayout>
        </LinearLayout>
        <android.support.v4.widget.NestedScrollView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/profile"
                            android:tint="@color/primaryColor"
                            android:layout_weight="20"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            />
                        <TextView
                            android:id="@+id/tvUserName"
                            android:padding="@dimen/_10sdp"
                            android:text="Pratik Vyas"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/com_facebook_likeboxcountview_text_color"
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@color/primaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>
                    <LinearLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/profile"
                            android:tint="@color/primaryColor"
                            android:layout_weight="20"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"/>
                        <TextView
                            android:id="@+id/tvUserEmail"
                            android:padding="@dimen/_10sdp"
                            android:text="pratik@gmail.com"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/com_facebook_likeboxcountview_text_color"
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@color/primaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>
                    <LinearLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/profile"
                            android:tint="@color/primaryColor"
                            android:layout_weight="20"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"/>
                        <TextView
                            android:id="@+id/tvUserMobile"
                            android:padding="@dimen/_10sdp"
                            android:text="1234567890"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/com_facebook_likeboxcountview_text_color"
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@color/primaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>
                    <LinearLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/profile"
                            android:tint="@color/primaryColor"
                            android:layout_weight="20"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"/>
                        <TextView
                            android:id="@+id/tvUserBirthDate"
                            android:padding="@dimen/_10sdp"
                            android:text="13 March 1991"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/com_facebook_likeboxcountview_text_color"
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>